<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weikbest.pro.saas.merchat.shop.mapper.ShopFinanceAccountMapper">

    <select id="getSettleTotalAmount" resultType="java.math.BigDecimal">
        select SUM(balance_amount)
        from t_mmdm_shop_finance_account
    </select>

    <select id="getDepositAccountTotalAmount" resultType="java.math.BigDecimal">
        select SUM(settle_amount)
        from t_mmdm_shop_finance_account
    </select>
</mapper>
